#!/usr/bin/env bash

. .env

./bin/build-images

clear
echo
echo "CTH24 - web-dev-docker"
echo "----------------------"
echo
echo "Project: ${PROJECT}"
echo "Project folder: ${PROJECT_PATH}"
echo
echo "Select System for Development:"
echo "1) PHP"
echo "2) Symfony"
echo
echo "q) Quit"
echo
read -r -p "Enter your choice: " choice
case "$choice" in
  1) ./bin/setup-php ;;
  2) ./bin/setup-symfony ;;
  q) exit ;;
  *) echo "invalid" ;;
esac