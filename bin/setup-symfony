#!/usr/bin/env bash

. .env

echo
echo "CTH24 - web-dev-docker"
echo "----------------------"
echo
echo "Project: ${PROJECT}"
echo "Project folder: ${PROJECT_FOLDER}"
echo
echo "Select Symfony Version"
echo "1) Symfony 5.4 LTS (skeleton)"
echo
echo "q) Quit"
echo
read -r -p "Enter your choice: " choice
case "$choice" in
  1) ./bin/setup-symfony-5.4 ;;
  q) exit ;;
  *) echo "invalid" ;;
esac