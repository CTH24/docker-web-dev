#!/usr/bin/env bash

. .env

echo 'PROJECT_TYPE="PHP (blank)"' >>.env

./bin/select-php-version
./bin/start-container

touch src/public/index.php
echo "<?php phpinfo();" > src/public/index.php

docker exec -it "${PROJECT}"-vscode /bin/bash -c "
    sudo chown -R coder:www-data /workspace
"
./bin/control